<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundpatient"
    tools:context=".PatientEspaceActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/MONESPACEPERSONNEL"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/monEspacePersonneltextView"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/colorGreen"
        android:gravity="center"
        android:text="@string/MONESPACEPERSONNEL"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ordonnaceButton2"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="@string/ordonnanceButton"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/CRButton2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/CRButton"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/examenButton2"
        app:layout_constraintEnd_toEndOf="@+id/ordonnaceButton2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/ordonnaceButton2"
        app:layout_constraintTop_toBottomOf="@+id/ordonnaceButton2"
        app:layout_constraintVertical_bias="0.496" />

    <Button
        android:id="@+id/examenButton2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:text="@string/examensButton"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/patientCountButton"
        app:layout_constraintEnd_toEndOf="@+id/CRButton2"
        app:layout_constraintStart_toStartOf="@+id/CRButton2" />

    <Button
        android:id="@+id/patientCountButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/colorGreen"
        android:text="@string/monCompteButton"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/BluetoothButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:clickable="true"
        app:backgroundTint="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toTopOf="@+id/patientCountButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/examenButton2"
        app:srcCompat="@android:drawable/stat_sys_data_bluetooth" />
</androidx.constraintlayout.widget.ConstraintLayout>